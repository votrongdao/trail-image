{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "suppressTaskName": true,
    "showOutput": "always",
    "tasks": [
        // https://cloud.google.com/appengine/docs/standard/go/tools/using-local-server
        {
            "taskName": "Run AppEngine Server",
            "command": "dev_appserver.py ./server/",
            "isShellCommand": true,
            "isBuildCommand": true
        },
        {
           "taskName": "Clear DataStore",
           "command": "dev_appserver.py --clear_datastore=yes app.yaml",
           "isShellCommand": true
        },
        // https://cloud.google.com/sdk/docs/managing-components
        {
           "taskName": "Update Google Cloud Components",
           "command": "gcloud components update",
           "isShellCommand": true

        },
        // https://cloud.google.com/sdk/gcloud/reference/info
        {
           "taskName": "Show Cloud Information",
           "command": "gcloud info",
           "isShellCommand": true
        }
   ]
}